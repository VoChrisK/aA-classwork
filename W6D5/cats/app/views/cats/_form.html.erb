<% if type == :new %>
  <% action_url = cats_url %>
  <% button_text = "Create cat 🐱" %>
<% elsif type == :edit %>
  <% action_url = cat_url(cat) %>
  <% button_text = "Edit cat 😾" %>
<% end %>


<form action="<%= action_url %>" method="POST">
  <% if type == :edit %>
      <input type="hidden" name="_method" value="PATCH" />
  <% end %>
  <label>Name:
    <input type="text" name="cat[name]" value="<% cat.name %>" placeholder="<%= @cat.name%>">
  </label>
  <br>
  <label>Sex:
    <% if type == :edit %>
      <input type="radio" id="M" name="cat[sex]" value='M' <% if @cat.sex == 'M'%> checked <% end %>>
      <label for="M">M</label>
      <input type="radio" id="F" name="cat[sex]" value='F' <% if @cat.sex == 'F'%> checked <% end %>>
      <label for="F">F</label>
    <% else %>
      <input type="radio" name="cat[sex]" value='M'>
      <label for="M">M</label>
      <input type="radio" name="cat[sex]" value='F'>
      <label for="F">F</label>
    <% end %>
  </label>   
  <br>
  <label>Color:
    <select name="cat[color]">
      <option value="" disabled>--select a color--</option>
      <option value='black' <% if @cat.color == 'black' %> selected <% end %>>Black</option>
      <option value='white' <% if @cat.color == 'white' %> selected <% end %>>White</option>
      <option value='calico' <% if @cat.color == 'calico' %> selected <% end %>>Calico</option>
      <option value='gray' <% if @cat.color == 'gray' %> selected <% end %>>Gray</option>
      <option value='orange' <% if @cat.color == 'orange' %> selected <% end %>>Orange</option>
    </select>
  </label>
  <br>
  <label>Birth Date:
    <input type="date" name=cat[birth_date] value="<%= @cat.birth_date.to_s %>">
  </label>
  <br>
  <label>Description:</label>
  <textarea name="cat[description]" value="" rows="5" cols="30" placeholder="<%= @cat.description%>"></textarea>
  <br>
  <input type="submit" value="<%= button_text %>">
 

</form>