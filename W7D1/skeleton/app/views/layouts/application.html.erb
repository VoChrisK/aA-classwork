<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% val = "" %>
    <% button_name = "" %>
    <% action_url = "" %>
    <% current_user ? val = "delete": val = "get" %>
    <% current_user ? button_name = "Logout": button_name = "Login" %>
    <% current_user ? action_url = sessions_url : action_url = new_sessions_url %>
    
    <ul>
    <% if current_user %>
      <li>Logged in as: <%= current_user.username %></li>
    <% end %>
    <li>
      <form action="<%= action_url %>" method="POST">
        <input type="hidden"
               name="authenticity_token"
               value="<%= form_authenticity_token %>">
  
        <input type="hidden" value="<%= val %>" name="_method" />
        <input type="submit" value="<%= button_name %>" />
      </form>
    </li>
  </ul>
    <%= yield %>
  </body>
</html>
